<% if error = ([:error_verifying_census, :birth_date_no_correct] & @residence.errors.keys).first %>
  <div id="error_explanation" data-alert class="callout alert" data-closable>
    <button class="close-button" aria-label="<%= t("application.close") %>" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>
      <%= t("officing.residence.new.#{error}") %>
      <%= t("verification.residence.new.census_error_help",
        offices: link_to( t("verification.residence.new.error_verifying_census_offices"),
        setting['verification_offices_url'], title: t('shared.target_blank_html'), target: "_blank")).html_safe %>
  </div>

<% else %>
  <%= render "shared/errors",
             resource: @residence,
             message: t("officing.residence.new.form_errors")  %>
<% end %>
